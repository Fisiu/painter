<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="48dp"
    android:layout_margin="2dp"
    android:baselineAligned="false" >

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="match_parent"
        android:layout_weight="0.15"
        android:orientation="vertical" >

        <TextView
            android:id="@+id/room_list_item_no"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:gravity="center"
            android:text="1"
            android:textAppearance="?android:attr/textAppearanceMedium" />
    </LinearLayout>

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="match_parent"
        android:layout_weight="0.70"
        android:orientation="vertical" >

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="24dp"
            android:padding="1dp" >

            <TextView
                android:id="@+id/room_list_item_walls_label"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="1dp"
                android:layout_marginRight="1dp"
                android:text="@string/label_walls" />

            <TextView
                android:id="@+id/room_list_item_walls_value"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="1dp"
                android:layout_marginRight="1dp"
                android:text="Placeholder" />

            <TextView
                android:id="@+id/room_list_item_dimensions"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="right"
                android:text="\[2x4x2\]"
                android:textAlignment="gravity"
                android:textAppearance="?android:attr/textAppearanceSmall" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="24dp"
            android:padding="1dp" >

            <TextView
                android:id="@+id/room_list_item_ceiling_label"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="1dp"
                android:layout_marginRight="1dp"
                android:text="@string/label_ceiling" />

            <TextView
                android:id="@+id/room_list_item_ceiling_value"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="1dp"
                android:layout_marginRight="1dp"
                android:text="Placeholder" />
        </LinearLayout>
    </LinearLayout>

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="match_parent"
        android:layout_weight="0.15"
        android:orientation="vertical" >

        <TextView
            android:id="@+id/room_list_item_walls_cost"
            android:layout_width="match_parent"
            android:layout_height="24dp"
            android:gravity="center|left"
            android:text="123,56" />

        <TextView
            android:id="@+id/room_list_item_total_cost"
            android:layout_width="match_parent"
            android:layout_height="24dp"
            android:gravity="center|left"
            android:text="123,56" />
    </LinearLayout>

</LinearLayout>